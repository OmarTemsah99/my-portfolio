generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model SkillCategory {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  skills Skill[]
}

model Skill {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  level           Int
  skillCategoryId String        @db.ObjectId
  skillCategory   SkillCategory @relation(fields: [skillCategoryId], references: [id], onDelete: Cascade)
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  tags        String[]
  demoUrl     String?
  githubUrl   String?
  liveUrl     String?
}
